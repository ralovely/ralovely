<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="google-site-verification" content="hySOSvD2QSC_zmLXq8dYd6ZQCEswhUQxAwtoDOH0KLQ" />

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Ralovely" %></title>
    <%= favicon_tag 'images/favicon.ico' %>

    <%= stylesheet_link_tag "reset", "highlight", "supersized.core", "ralovely" %>
    <%= javascript_include_tag "application.js", "jquery.min.js", "supersized.3.1.3.core.min.js" %>
    <%= yield_content :assets %>
    <script type="text/javascript" src="http://use.typekit.com/bdg4tzx.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <script type="text/javascript">
      jQuery(function($){
        $.supersized({
          //Background image
          slides  :  [ { image : '/images/<%= current_page.data.background_image || "ralovely-1680.jpg" %>' } ]
        });
      });
    </script>
  </head>

  <body class="<%= page_classes %>">
    <div class="corner tl"></div>
    <div class="corner tr"></div>
    <%= partial 'layouts/nav' %>
      <%= yield %>
    <!--div class="corner bl"></div-->
    <!--div class="corner br"></div-->
    <%= javascript_include_tag "ga.js" %>
  </body>
</html>
